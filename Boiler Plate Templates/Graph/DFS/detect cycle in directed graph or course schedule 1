class Solution {
    public boolean canFinish(int numCourses, int[][] prerequisites) {
        //detect cycle in undirected graph
        int [] visited = new int[numCourses];
        int [] path = new int[numCourses];
        Map<Integer,List<Integer>> adj = new HashMap<>();
        for(int []e:prerequisites){
            int u=e[0],v=e[1];
            if(!adj.containsKey(u)) adj.put(u,new ArrayList<>());
            adj.get(u).add(v);
        }
        for(int i=0;i<numCourses;i++){
            if(visited[i]==1) continue;
            boolean hasCycle = dfs(i,adj,visited,path);
            if(hasCycle) return false;
        }
        return true;
    }
    public static boolean dfs(int node,Map<Integer,List<Integer>> adj,int [] visited,int [] path){
        visited[node]=1;
        path[node]=1;
        List<Integer> ls= adj.getOrDefault(node,new ArrayList<>());
        for(int ad:ls){
            if(path[ad]==1){
                return true;
            }
            if(visited[ad]==0){
                boolean hasCycle = dfs(ad,adj,visited,path);
                if(hasCycle){
                    return true;
                }
            }
        }
        //backtrack node from path 
        path[node]=0;
        return false;
    }
}
