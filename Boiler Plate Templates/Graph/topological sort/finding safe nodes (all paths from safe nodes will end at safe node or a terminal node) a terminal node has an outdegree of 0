class Solution {
    public List<Integer> eventualSafeNodes(int[][] graph) {

        //reversing the edges
        Map<Integer,List<Integer>> mpp = new HashMap<>();
        int n= graph.length;
        for(int u=0;u<n;u++) mpp.put(u,new ArrayList<>());
        for(int u=0;u<n;u++){
            int [] adj= graph[u];
            for(int v:adj){
                mpp.get(v).add(u);//add u to v adj list
            }
        }

        //take queue and add node with indegree zero (termincal node in original graph)
        int [] indegree = new int[n];
        for(int i=0; i<n; i++) indegree[i] = graph[i].length;
        Queue<Integer> q= new LinkedList<>();
        for(int i=0;i<n;i++){
            if(indegree[i]==0) q.offer(i);//q contains terminal nodes (safe by default)
        }

        List<Integer> safeNodes = new ArrayList<>();
        while(!q.isEmpty()){
            int node = q.poll();
            safeNodes.add(node); //tracking other safe nodes that connect the terminal nodes 
            for(int an:mpp.get(node)){
                indegree[an]--;
                if(indegree[an]==0){
                    q.offer(an);
                }
            }
        }

        Collections.sort(safeNodes);
        return safeNodes;
    }
}
